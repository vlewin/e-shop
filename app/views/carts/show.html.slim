h2.page-header
  | Current cart
  .pull-right= link_to 'Empty cart', @cart, data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger'

table.table.table-striped.table-hover.table-responsive
  thead
    tr
      th
      th Name
      th Quantity
      th Price
      th Tax
      th Total

  tbody
    - @cart.line_items.each do |item|
      tr
        td
          img.featurette-image.img-responsive alt="200x200" data-src="holder.js/200x200/auto" src="data:image/svg+xml;base64," style=("width: 50px; height: 50px;")
        td= item.product.name
        td= item.quantity
        td= item.price
        td= item.product.tax
        td= item.total_price

    tr
      td colspan=5
        | Total:
      td= @cart.total_price



.pull-left= link_to 'Continue shopping', products_path, class: 'btn btn-default'
.pull-right= link_to 'Checkout', new_order_path, class: 'btn btn-success'

