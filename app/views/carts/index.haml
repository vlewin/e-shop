%h4.page-header.no-margin
  Carts
  .pull-right
    = link_to("Purge stale carts", purge_carts_path, class: 'btn btn-xs btn-danger', method: :delete)

.panel.panel-default
  .panel-body
    %table.table.table-hover
      %thead
        %tr
          %th ID
          %th Created at
          %th Updated at
          %th Items count
          %th{ colspan: 3 }
      %tbody
        - @carts.each_with_index do |cart, index|
          %tr
            %td= cart.id
            %td= cart.created_at
            %td= cart.updated_at
            %td= cart.line_items.count
            %td.text-right
              = icon_link_to '', cart, { class: 'btn btn-sm btn-default' }, 'fa-eye'
              = icon_link_to '', cart, { data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-sm btn-default' }, 'fa-trash-o'




