%h4.page-header.no-margin
  Carts
  .pull-right
    = link_to("Purge stale carts", purge_carts_path, class: 'btn btn-xs btn-danger', method: :delete)

.panel.panel-default
  .panel-body
    %table.table.table-hover
      %thead
        %tr
          %th ID
          %th Created at
          %th Updated at
          %th Items count
          %th{ colspan: 3, width: '25%'}
            = ransack_search_form_for(carts_path, :user_name_cont)
      %tbody{id: controller_name}
        = render partial: controller_name



