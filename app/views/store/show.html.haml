- breadcrumb :product, @product

.panel.panel-default.product-details
  .panel-body
    .row
      .col-xs-6.col-md-5.border-right
        = product_image_tag(@product, :show)
      .col-xs-6.col-md-7
        .product
          %h3
            = @product.title
          .text-muted
            %p= @product.description

          %hr

          .text-muted
            %p= _("EAN: %s") % @product.ean
            %p= _("VAT: %s") % number_to_percentage(@product.vat.rate)
            %p= _("Available: %d of %d") % [@product.available_quantity, @product.quantity]

          %hr

          %h3
            = _('Price:')
            = " #{number_to_currency(@product.price)}"

          .row
            = form_tag line_items_path(product_id: @product) do
              .col-xs-4.col-md-2
                = quantity_field_tag 1, { max: @product.available_quantity}
              .col-xs-5.col-md-4
                = button_tag _('Add to cart'), type: 'submit', class: 'btn btn-sm btn-success'


