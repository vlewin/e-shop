%hr

#store-index
  .row
    .col-xs-12.col-sm-12.col-md-6
      = search_form_for @search, url: root_path, method: :get, remote: true, class: '' do |f|
        = hidden_field_tag :view, params[:view]

        .input-group
          %span.input-group-addon
            %i.fa.fa-search

          = f.text_field :name_cont, placeholder: 'Search', class: 'form-control'

    .col-xs-12.col-sm-12.col-md-6
      .text-right
        %i.fa.fa-sort-alpha-asc
        Sort by:
        .btn-group
          .btn.btn-default
            = sort_link @search, :name
            -# %i.fa.fa-sort-alpha-asc
          .btn.btn-default
            = sort_link @search, :price
            -# %i.fa.fa-sort-numeric-desc
          .btn.btn-default
            = sort_link @search, :created_at
            -# %i.fa.fa-sort-amount-desc

        View as:
        .btn-group
          = icon_link_to '', root_path(view: :grid), { class: 'btn btn-sm btn-default' }, 'fa-lg fa-th-large'
          = icon_link_to '', root_path(view: :list), { class: 'btn btn-sm btn-default' }, 'fa-lg fa-th-list'

  %hr

  #products
    = render 'products'

