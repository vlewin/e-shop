h2.page-header
  | Products

- if current_user.admin?
  = render partial: 'products/admin/index'
- else
  .row
    .col-md-3
      .panel.panel-default
        .panel-heading
          b Categories
        .panel-body

          ul#sidebar.nav.nav-stacked
            - @categories.each do |category|
              li
                = link_to category.name, category

          ul.list-group
            li.list-group-item.active Categories
            - @categories.each do |category|
              li.list-group-item
                = link_to category.name, category

    .col-md-9
      .panel.panel-default
        .panel-heading
          |Â Filter
          .pull-right
            form role="search"
              input.form-control placeholder="Search" type="text"

          .clearfix.visible-xs

        .panel-body
          .row
            - @products.each do |product|
              .col-md-4
                a{href="#{product_path(product)}" class='thumbnail product'}
                  = image_tag 'http://placehold.it/200x150'
                  .caption
                    h5= product.name
                    p.desc= product.description
                    b= number_to_currency(product.price)

