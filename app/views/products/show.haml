.panel.panel-default.product-details
  .panel-body
    .row
      .col-xs-4.col-md-3
        = product_image_tag(@product, :show)
      .col-xs-8.col-md-9
        .product
          %h3
            = @product.title
          .text-muted
            %p= @product.description
          %h3
            = " #{number_to_currency(@product.price)}"

          %hr

          .text-muted
            = _('EAN:')
            = @product.ean

          .text-muted
            = _('VAT:')
            = number_to_percentage(@product.vat.rate, precision: 0)

          .text-muted
            = _('Availability:')
            = "#{@product.available_quantity} of #{@product.quantity} available"

          %hr

          = link_to _('Edit'), edit_product_path(@product), class: 'btn btn-default'
          = link_to _('Back'), products_path


