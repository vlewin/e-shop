.panel.panel-default.product-details
  .panel-body
    .row
      .col-xs-4.col-md-3
        = product_image_tag(@product, :show)
      .col-xs-8.col-md-9
        .product
          %h3
            = @product.name
          .text-muted
            %p= @product.description
          %h3
            = " #{number_to_currency(@product.price)}"

          %hr

          .text-muted
            %p= "Article number: #{@product.ean}"
            %p= "Stock: #{@product.available_quantity} of #{@product.quantity} available"

          %hr

          = link_to 'Edit product', edit_product_path(@product), class: 'btn btn-default'
          = link_to 'Back to products', products_path


