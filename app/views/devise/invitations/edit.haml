.row
  .col-sm-8.col-sm-offset-2.col-md-5.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %strong= _('Set your password')
      .panel-body
        = render 'layouts/errors', object: resource
        = form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }, class: 'form-horizontal') do |f|
          = f.hidden_field :invitation_token
          .form-group
            = label_tag :name, _('Name')
            = f.text_field :name, autofocus: true, required: true,  class: 'form-control'

          .form-group
            = f.label :password, _('New password')
            = f.password_field :password, autofocus: true, required: true, class: 'form-control'
          .form-group
            = f.label :password_confirmation, _('Confirm new password')
            = f.password_field :password_confirmation, required: true, class: 'form-control'

          = f.submit _('Save'), class: 'btn btn-success'

